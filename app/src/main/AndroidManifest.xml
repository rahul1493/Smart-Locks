<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.smartlock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lock"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AllUsers"
            android:parentActivityName=".HomeActivity"> </activity>
        <activity android:name=".CheckLog"
            android:parentActivityName=".HomeActivity"> </activity>
        <activity android:name=".GeneratePattern"
            android:parentActivityName=".HomeActivity"> </activity>
        <activity android:name=".GeneratePatternOther"
            android:parentActivityName=".HomeActivityOther"> </activity>
        <activity android:name=".Notification"
            android:parentActivityName=".HomeActivity"> </activity>
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait"> </activity>
        <activity android:name=".HomeActivityOther"
            android:screenOrientation="portrait"> </activity>
        <activity android:name=".Logout"> </activity>
        <activity android:name=".SingleTask"
            android:parentActivityName=".AllUsers"> </activity>
        <activity android:name=".SignUpConfirm"> </activity>
        <activity android:name=".ChangePassword"
            android:parentActivityName=".HomeActivity"> </activity>
        <activity android:name=".ChangePasswordOther"
            android:parentActivityName=".HomeActivityOther"> </activity>
        <activity android:name=".CreateUser"
            android:parentActivityName=".HomeActivity"> </activity>

        <activity android:name=".Unlock"
            android:parentActivityName=".HomeActivity"> </activity>
    </application>


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>